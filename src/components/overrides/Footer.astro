---
import Default from "@astrojs/starlight/components/Footer.astro";
import { Icon } from "@astrojs/starlight/components";
---

<Default><slot /></Default>
<div>
  <p class="footer-item">
    Copyright Â© {new Date().getFullYear()} Amethyst Development and contributors. Built with <Icon name="starlight" class="icon" />
    <a href="https://starlight.astro.build/" target="_blank">Starlight</a>.
  </p>
  <p class="footer-item muted">
    A community-driven open-source collective, building the future together.
  </p>
</div>

<style>
  .footer-item {
    text-align: center;
    font-size: var(--sl-text-2xs);
    color: var(--sl-color-gray-2);
    margin-bottom: 0.25rem;
  }

  .footer-item a:not(:hover) {
    text-decoration: none;
  }

  .icon {
    color: var(--sl-color-orange);
  }

  .muted {
    color: var(--sl-color-gray-3);
  }
</style>